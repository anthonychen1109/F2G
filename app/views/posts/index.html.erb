<div class="header container">

  <div class="header-left">
    <%= image_tag "flatiron.png" %>
    <h2>Flat-a-gram</h2>
  </div>

  <div class="header-right">
    <% if logged_in? %>
    <div class="edit-back">
      <div class="edit-btn container">
        <%= link_to "Go back", user_path(@user), class: "btn btn-primary" %>
      </div>
      <div class="logout-button">
        <%= button_to "Logout", logout_path, method: :delete, class: 'btn btn-primary' %>
      </div>
    </div>
    <% else %>
      <!-- <%= link_to "Login", login_path %> / <%= link_to "Sign up", signup_path %> -->
    <% end %>
  </div>

  </div>
  <hr />

<%= link_to "User page", user_path(@user), class: 'btn btn-primary post-back-button'%>
<div class="container">
  <div class="user-show">

    <div class="user-post-list">
      <% @posts.each do |post| %>

      <div class="user-posts">
        <%= post.user.name %>
        <div class="user-posts-image">
          <%= link_to image_tag(post.post_pic), post_path(post) %>
        </div>
      </div>

      <% end %>
    </div>

  </div>
</div>
