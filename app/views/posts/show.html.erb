<div class="header container">

  <div class="header-left">
    <%= image_tag "flatiron.png" %>
    <h2>Flat-a-gram</h2>
  </div>

  <div class="header-right">
    <% if logged_in? %>
      <div class="logout-button">
        <%= button_to "Logout", logout_path, method: :delete, class: 'btn btn-primary' %>
      </div>
    <% else %>
      <!-- <%= link_to "Login", login_path %> / <%= link_to "Sign up", signup_path %> -->
    <% end %>
  </div>

  </div>
  <hr />

  <div class="post-buttons container">
    <div class="see-post">
      <%= link_to "User page", user_path(@post.user), class: 'btn btn-secondary post-back-button'%>
    </div>
    <div class="create-post">
      <%= link_to "Post page", posts_path, class: 'btn btn-secondary post-back-button'%>
    </div>
    <div class="edit-post">
      <%= link_to "Edit post", edit_post_path, class: 'btn btn-secondary post-back-button'%>
    </div>
  </div>

  <div class="post-individual">
    <div class="post-individual-image">

      <div class="post-individual-pic-show">
        <%= image_tag @post.post_pic_show %>
      </div>

      <div class="post-individual-right">
        <div class="post-individual-profile">
          <div>
            <div class="post-individual-pic-post">
              <%= image_tag @user.profile_pic_post %>
            </div>
          </div>
          <div class="post-individual-profile-info">
            <div class="">
              <b><%= @post.user.name %></b>
            </div>
            <div class="">
              <%= @post.location %>
            </div>

            <div class="">
              <%= @post.caption %>
            </div>
          </div>
        </div>

        <div>
          <hr />
          <div class="post-individual-icons">
            <div class="likes">
              <i class="fa fa-heart hearticon"></i>
              <%= "#{@post.likes} likes" %>
            </div>
            <div class="comments">
              <i class="fa fa-comment"></i>
              <%= link_to "#{@post.comments.count} comments", new_comment_path(post_id: @post.id, user_id:@user.id) %>
            </div>
          </div>
          <hr />

          <div class="">
            <% @post.comments.each do |comment| %>
              <div class="post-individual-comment">

                <div class="post-individual-comment-profile">
                  <div>
                    <%= image_tag comment.user.profile_pic_post %>
                  </div>
                  <div>
                    <b><%= comment.user.name %></b>
                  </div>
                </div>

                <div class="post-individual-comment-content">
                  <%= comment.content %>
                </div>
              </div>
              <br/>
            <% end %>
          </div>
        </div>
        <hr/>
        <div class="post-individual-comment-message">
          <%= link_to "Leave a comment",  new_comment_path(post_id: @post.id, user_id:@user.id)%>
        </div>
      </div>

    </div>
  </div>
