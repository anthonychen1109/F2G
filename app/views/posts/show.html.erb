<div class="header container">

  <div class="header-left">
    <%= image_tag "flatiron.png" %>
    <h2>Flat-a-gram</h2>
  </div>

  <div class="header-right">
    <% if logged_in? %>
      <div class="logout-button">
        <%= button_to "Logout", logout_path, method: :delete, class: 'btn btn-primary' %>
      </div>
    <% else %>
      <!-- <%= link_to "Login", login_path %> / <%= link_to "Sign up", signup_path %> -->
    <% end %>
  </div>

  </div>
  <hr />

  <div class="post-buttons container">
    <div class="see-post">
      <%= link_to "User page", user_path(@post.user), class: 'btn btn-secondary post-back-button'%>
    </div>
    <div class="create-post">
      <%= link_to "Post page", posts_path, class: 'btn btn-secondary post-back-button'%>
    </div>
  </div>

  <div class="container post-individual">
    <div class="">
      <%= image_tag @post.post_image %>      
    </div>
    <%= image_tag @user.profile_pic %>
    <%= @post.user.name %>
    <%= @post.location %>
    <% @post.comments.each do |comment| %>
      <%= comment.content %>
    <% end %>
    <%= @post.caption %>
  </div>

  <%= link_to "Comment",  new_comment_path(post_id: @post.id, user_id:@user.id)%>
