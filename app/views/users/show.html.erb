<div class="header container">

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#"><div class="header-left">
    <%= image_tag "flatiron.png" %>
    <h2>Flat-a-gram</h2>
  </div></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item active">
        </li>
          <% if logged_in? %>
        <div
          class="logout-button">
          <a class="logout-button" href="#"> <%=link_to "PostsFeed", posts_path%> <span class="sr-only">(current)</span></a>

          <%= link_to "Logout", logout_path, method: :delete %>
        </div>
    <% end %>
      </ul>
    </div>
  </nav>

</div>
<hr />


<div class="container">
  <div class="user-show">
    <div class="user-info">

      <div class="user-image">
        <%= image_tag @user.profile_pic, class: 'user-image' %>
      </div>

      <div class="user-profile">

        <div class="profile">
          <h1 class="profile-name"><%= @user.name.downcase.titleize %></h1>
          <%= link_to "Edit Profile", edit_user_path, class: 'btn btn-lighten' %>
        </div>

        <h5><%= "#{@user.posts.count} posts" %></h5>
        <div class="user-bio">
          <div>
            <p><%= @user.bio %></p>
          </div>
        </div>
      </div>

    </div>
    <hr/>

    <div class="post-buttons">
      <div class="see-post">
      </div>

      <div class="create-post">
      </div>
    </div>


    <div class="user-post-list">
      <% @posts.each do |post| %>
      <div class="user-posts">
        <div class="user-posts-image">
          <%= link_to image_tag(post.post_pic), post_path(post) %>
        </div>
      </div>

      <% end %>
    </div>

  </div>
</div>
